{
  "name": "CSN downloader",
  "description": "Download music from CSN",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "src/background/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.chiasenhac.vn/*",
        "https://*.chiasenhac.vn/*"
      ],
      "run_at": "document_end",
      "js": [
        "src/background/content-script.js"
      ]
    }
  ],
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": false
  },
  "web_accessible_resources": [
    "src/csn-embedded/get-link.js"
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "manifest_version": 2
}
